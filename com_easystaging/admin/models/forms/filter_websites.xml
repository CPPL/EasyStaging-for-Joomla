<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_EASYSTAGING_FILTER_SEARCH_LABEL"
                description="COM_EASYSTAGING_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
        />
        <field
                name="state"
                type="EasyStagingWebsiteStatus"
                label="COM_EASYSTAGING_FILTER_PUBLISHED"
                description="COM_EASYSTAGING_FILTER_PUBLISHED_DESC"
                onchange="this.form.submit();"
        >
            <option value="">COM_EASYSTAGING_SELECT_PUBLISHED</option>
        </field>
        <field
                name="created_by"
                type="EasyStagingWebsiteCreatedBy"
                label="COM_EASYSTAGING_FILTER_CREATOR"
                description="COM_EASYSTAGING_FILTER_CREATOR_DESC"
                onchange="this.form.submit();"
        >
            <option value="">COM_EASYSTAGING_SELECT_CREATED_BY</option>
        </field>
        <field
                name="modified_by"
                type="EasyStagingWebsiteModifiedBy"
                label="COM_EASYSTAGING_FILTER_MODIFIED_BY"
                description="COM_EASYSTAGING_FILTER_MODIFIED_BY_DESC"
                onchange="this.form.submit();"
        >
            <option value="">COM_EASYSTAGING_SELECT_MODIFIED_BY</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_CONTENT_LIST_FULL_ORDERING"
                description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="state ASC">JSTATUS_ASC</option>
            <option value="state DESC">JSTATUS_DESC</option>
            <option value="site_name ASC">COM_EASYSTAGING_OPTION_NAME_ASC</option>
            <option value="site_name DESC">COM_EASYSTAGING_OPTION_NAME_DESC</option>
            <option value="created_by ASC">COM_EASYSTAGING_OPTION_CREATED_BY_ASC</option>
            <option value="created_by DESC">COM_EASYSTAGING_OPTION_CREATED_BY_DESC</option>
            <option value="created ASC">JDATE_ASC</option>
            <option value="created DESC">JDATE_DESC</option>
            <option value="id ASC">JGRID_HEADING_ID_ASC</option>
            <option value="id DESC">JGRID_HEADING_ID_DESC</option>
        </field>
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="25"
                label="COM_CONTENT_LIST_LIMIT"
                description="COM_CONTENT_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
        />
    </fields>
</form>
