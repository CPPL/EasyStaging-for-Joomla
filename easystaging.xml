<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.6.0" method="upgrade">
 
	<name>EasyStaging</name>
	<!-- The following elements are optional and free of formatting constraints -->
	<creationDate>12-Dec-2011</creationDate>
	<author>Craig Phillips</author>
	<authorEmail>support@craigphillips.biz</authorEmail>
	<authorUrl>http://craigphillips.biz</authorUrl>
	<copyright>Â© 2011 Craig Phillips Pty Ltd</copyright>
	<license>License Info</license>
	<!--  The version string is recorded in the components table -->
	<version>0.5.0 (cfdc0ca)</version>
	<!-- The description is optional and defaults to the name -->
	<description>EasyStaging is a simply component that allows you to prepare content on a "staging" version of your website and when you're ready push it out to the live website.</description>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>

	<administration>
		<!-- Administration Menu Section -->
		<menu img="components/com_easystaging/assets/media/EasyStaging-16-Icon.png">EasyStaging</menu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<languages folder="admin/language">
			<language tag="en-GB">en-GB/en-GB.com_easystaging.ini</language>
		</languages>
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>controller.php</filename>
			<filename>easystaging.php</filename>
			<filename>index.html</filename>
			<!-- Folders section -->
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>syncfiles</folder>
			<folder>views</folder>
			<folder>assets</folder>
			<!-- SQL files section -->
			<folder>sql</folder>
		</files>
	</administration>
 
</extension>
