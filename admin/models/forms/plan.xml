<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields>
		<fieldset name="plan">
			<field
				name="name"
				type="text"
				label="COM_EASYSTAGING_PLAN_NAME_LABEL" description="COM_EASYSTAGING_PLAN_NAME_DESC"
				size="40"
				class="inputbox"
				default=""
				filter="safehtml"
			/>
			<field
				name="description"
				type="textarea"
				label="COM_EASYSTAGING_PLAN_DESCRIPTION_LABEL" description="COM_EASYSTAGING_PLAN_DESCRIPTION_DESC"
				class="inputbox"
				default=""
				filter="safehtml"
			/>
			<field
				name="published"
				type="list"
				label="COM_EASYSTAGING_PUBLISHED_LABEL" description="COM_EASYSTAGING_PUBLISHED_DESC"
				default=""
			>
				<option value="1">JPUBLISHED</option>
				<option value="0">JUNPUBLISHED</option>
			</field>
			<field name="id"  type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
				description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
				readonly="true"  />
		</fieldset>
		<fieldset name="basic" label="COM_EASYSTAGING_BASIC_ATTRIBUTES_LABEL">
			<field
				name="created" type="calendar" class="readonly" 	
				label="JGLOBAL_FIELD_CREATED_LABEL" description="JGLOBAL_FIELD_CREATED_DESC"
				size="22" readonly="true" format="%Y-%m-%d %H:%M:%S"
				filter="user_utc" />
			<field
				name="created_by"
				type="user"
				label="JGLOBAL_FIELD_CREATED_BY_LABEL" description="JGLOBAL_FIELD_CREATED_BY_Desc"
				class="readonly"
				readonly="true"
				filter="unset"
			/>
	
			<field
				name="publish_up"
				type="calendar"
				label="COM_EASYSTAGING_PUBLISHED_UP_LABEL" description="COM_EASYSTAGING_PUBLISHED_UP_DESC"
				class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22"
				filter="user_utc" 
				default=""
			/>
			<field
				name="publish_down"
				type="calendar"
				label="COM_EASYSTAGING_PUBLISHED_DOWN_LABEL" description="COM_EASYSTAGING_PUBLISHED_DOWN_DESC"
				class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22"
				filter="user_utc" 
				default=""
			/>
			<field name="modified" type="calendar" class="readonly"
				label="JGLOBAL_FIELD_MODIFIED_LABEL" description="COM_EASYSTAGING_FIELD_MODIFIED_DESC"
				size="22" readonly="true" format="%Y-%m-%d %H:%M:%S"
				filter="user_utc" />
			<field
				name="modified_by"
				type="user"
				label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
				class="readonly"
				readonly="true"
				filter="unset"
			/>
			<field
				name="last_run" class="readonly"
				format="%Y-%m-%d %H:%M:%S"
				filter="user_utc"
			/>
		</fieldset>
	</fields>
	<fields name="localSite">
		<fieldset>
			<field
				name="site_name"
				label="COM_EASYSTAGING_LOCALSITE_NAME"
				type="text"
				class="inputbox"
				default=""
			/>
			<field
				name="site_url"
				label="COM_EASYSTAGING_LOCALSITE_URL"
				type="text"
				class="inputbox"
				default="http://"
			/>
			<field
				name="site_path"
				label="COM_EASYSTAGING_LOCALSITE_PATH"
				type="text"
				class="inputbox"
				default="public_html/"
			/>
			<field
				name="database_name"
				label="COM_EASYSTAGING_LOCALSITE_DATABASE_NAME"
				type="text"
				class="inputbox"
				default=""
			/>
			<field
				name="database_user"
				label="COM_EASYSTAGING_LOCALSITE_DATABASE_USER"
				type="text"
				class="inputbox"
				default=""
			/>
			<field
				name="database_password"
				label="COM_EASYSTAGING_LOCALSITE_DATABASE_PASSWORD"
				type="text"
				class="inputbox"
				default=""
			/>
			<field
				name="database_host"
				label="COM_EASYSTAGING_LOCALSITE_DATABASE_HOST"
				type="text"
				class="inputbox"
				default="localhost"
			/>
			<field
				name="database_table_prefix"
				label="COM_EASYSTAGING_LOCALSITE_DATABASE_TABLE_PREFIX"
				type="text"
				class="inputbox"
				default=""
			/>
			<field
				name="rsync_options"
				label="COM_EASYSTAGING_LOCALSITE_RSYNC_OPTIONS"
				type="text"
				class="inputbox"
				default=""
			/>
			<field
				name="file_exclusions"
				label="COM_EASYSTAGING_LOCALSITE_FILE_EXCLUSIONS"
				type="textarea"
				class="inputbox"
				default=""
			/>
		</fieldset>
	</fields>
</form>
