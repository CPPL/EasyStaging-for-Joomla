<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields>
		<fieldset>
			<field
				name="site_name"
				label="COM_EASYSTAGING_SITE_NAME" description="COM_EASYSTAGING_SITE_NAME_DESC"
				type="text"
				class="inputbox"
				default=""
			/>
            <field
                    name="id"
                    label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC"
                    type="text"
                    class="inputbox"
                    default=""
            />
			<field
					name="type"
					label="COM_EASYSTAGING_SITE_TYPE" description="COM_EASYSTAGING_SITE_TYPE_DESC"
					type="EasyStagingWebsiteType"
					class="inputbox"
					onchange="com_EasyStaging.updateRsync(this)"
			/>
			<field
				name="site_url"
				label="COM_EASYSTAGING_SITE_URL" description="COM_EASYSTAGING_SITE_URL_DESC"
				type="text"
				class="inputbox"
				default="http://"
				size="50"
			/>
			<field
				name="site_path"
				label="COM_EASYSTAGING_SITE_PATH" description="COM_EASYSTAGING_SITE_PATH_DESC"
				type="text"
				class="inputbox"
				default="public_html/"
				size="50"
			/>
			<field
				name="database_name"
				label="COM_EASYSTAGING_SITE_DATABASE_NAME" description="COM_EASYSTAGING_SITE_DATABASE_NAME_DESC"
				type="text"
				class="inputbox"
				default=""
			/>
			<field
				name="database_user"
				label="COM_EASYSTAGING_SITE_DATABASE_USER" description="COM_EASYSTAGING_SITE_DATABASE_USER_DESC"
				type="text"
				class="inputbox"
				default=""
			/>
			<field
				name="database_password"
				label="COM_EASYSTAGING_SITE_DATABASE_PASSWORD" description="COM_EASYSTAGING_SITE_DATABASE_PASSWORD_DESC"
				type="password"
				class="inputbox"
				default=""
			/>
			<field
				name="database_host"
				label="COM_EASYSTAGING_SITE_DATABASE_HOST" description="COM_EASYSTAGING_SITE_DATABASE_HOST_DESC"
				type="text"
				class="inputbox"
				default="localhost"
				size="50"
			/>
			<field
				name="database_table_prefix"
				label="COM_EASYSTAGING_SITE_DATABASE_TABLE_PREFIX" description="COM_EASYSTAGING_SITE_DATABASE_TABLE_PREFIX_DESC"
				type="text"
				class="inputbox"
				default=""
			/>
			<field
				name="rsync_options"
				label="COM_EASYSTAGING_SITE_RSYNC_OPTIONS" description="COM_EASYSTAGING_SITE_RSYNC_OPTIONS_DESC"
				type="text"
				class="inputbox span6"
				default=""
			/>
			<field
				name="file_exclusions"
				label="COM_EASYSTAGING_SITE_FILE_EXCLUSIONS" description="COM_EASYSTAGING_SITE_FILE_EXCLUSIONS_DESC"
				type="textarea"
				class="inputbox span6"
				default=""
				rows="10"
				cols="50"
			/>
		</fieldset>
	</fields>
</form>
